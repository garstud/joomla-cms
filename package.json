    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vue": "^10.6.2",
    "fs-extra": "^11.3.3",
    "ini": "^6.0.0",
    "jasmine-core": "^5.13.0",
    "joomla-cypress": "^1.3.1",
    "lightningcss": "^1.30.2",
    "mysql2": "^3.15.3",
