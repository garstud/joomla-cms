    "@codemirror/view": "^6.39.4",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@popperjs/core": "^2.11.8",
    "accessibility": "^3.0.17",
    "altcha": "^2.3.0",
    "awesomplete": "^1.1.7",
    "bootstrap": "^5.3.8",
