    "rollup-plugin-vue": "^6.0.0",
    "rtlcss": "^4.3.0",
    "sass-embedded": "^1.97.0",
    "semver": "^7.7.3",
    "smtp-tester": "^2.1.0",
    "stylelint": "^16.26.1",
