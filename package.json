    "joomla-ui-custom-elements": "^0.4.1",
    "jquery": "^3.7.1",
    "jquery-migrate": "^3.6.0",
    "mark.js": "^8.11.1",
    "mediaelement": "^7.1.0",
    "metismenujs": "^1.4.0",
